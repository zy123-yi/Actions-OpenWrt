# 基础架构与磁盘设置
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y
CONFIG_VMDK_IMAGES=y
CONFIG_TARGET_KERNEL_PARTSIZE=500
CONFIG_TARGET_ROOTFS_PARTSIZE=1024

# 核心防火墙 (FW4/Nftables) - 24.10 必须项
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables-json=y
CONFIG_PACKAGE_libnftnl=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-nft-fib=y
CONFIG_PACKAGE_kmod-nft-nat=y

# --- PassWall 极简设置 (仅保留 Sing-Box 核心) ---
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall_I18N_zh-cn=y
CONFIG_PACKAGE_luci-app-passwall_Nftables_Transparent_Proxy=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_SingBox=y
# 明确禁止 Xray 和其他核心，减少冲突和体积
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Xray is not set
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Hysteria is not set
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Trojan_Plus is not set
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Shadowsocks_Libev_Client is not set

# --- Sing-Box 协议全开启 (完整增强) ---
CONFIG_PACKAGE_sing-box=y
CONFIG_SING_BOX_BUILD_QUIC=y
CONFIG_SING_BOX_BUILD_UTLS=y
CONFIG_SING_BOX_BUILD_GRPC=y
CONFIG_SING_BOX_BUILD_WIREGUARD=y
CONFIG_SING_BOX_BUILD_HYSTERIA=y
CONFIG_SING_BOX_BUILD_TUIC=y
CONFIG_SING_BOX_BUILD_SHADOWTLS=y
CONFIG_SING_BOX_BUILD_V2RAY_API=y
CONFIG_SING_BOX_BUILD_ECH=y
CONFIG_SING_BOX_BUILD_NAIVE=y
CONFIG_SING_BOX_BUILD_GVISOR=y
CONFIG_SING_BOX_BUILD_CLASH_API=y

# --- DNS & KMS 功能组合 ---
CONFIG_PACKAGE_luci-app-mosdns=y
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_luci-app-vlmcsd=y
CONFIG_PACKAGE_vlmcsd=y

# --- 明确禁止 Rust 与 Xray 相关包 (彻底终结编译报错) ---
# CONFIG_PACKAGE_shadowsocks-rust-sslocal is not set
# CONFIG_PACKAGE_shadowsocks-rust-ssserver is not set
# CONFIG_PACKAGE_geoview is not set
# CONFIG_PACKAGE_xray-core is not set
# CONFIG_PACKAGE_luci-app-adguardhome is not set

# --- 系统工具与依赖 ---
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_ttyd=y
CONFIG_PACKAGE_coreutils-nohup=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_xz=y
CONFIG_PACKAGE_xz-utils=y
CONFIG_PACKAGE_ca-bundle=y

# --- 9. Turbo ACC 网络加速 (提升智能家居响应与吞吐) ---
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_OFFLOADING=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_SHORTCUT_FE=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_BBR_CCA=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_DNS_CACHE=y

# 核心依赖 (对应 24.10 的内核加速模块)
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
